@model IEnumerable<Ljekar>
@{
    ViewData["Title"] = "Ljekari";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista ljekara</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Ljekari" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj ljekara
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr class="table-warning" style="color:dimgray">
                <th>
                    Ime
                </th>
                <th>
                    Prezime
                </th>
                <th>
                    Titula
                </th>
                <th>
                    Šifra
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width:30%;">
                        @obj.Ime
                    </td>
                    <td style="width:25%;">
                        @obj.Prezime
                    </td>
                    <td style="width:15%">
                        @obj.Titula
                    </td>
                    <td style="width:10%">
                        @obj.Sifra
                    </td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Ljekari" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info mx-2" style="border-radius:2px;"><i class="bi bi-pencil-square"></i> Uredi</a>
                            <form method="post" asp-controller="Ljekari" asp-action="Delete" asp-route-id="@obj.Id">
                                <button type="submit" class="btn btn-danger mx-1" style="border-radius:2px;"><i class="bi bi-trash3"></i> Obriši</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

